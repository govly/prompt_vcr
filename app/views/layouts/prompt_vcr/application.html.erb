<!DOCTYPE html>
<html class="dark">
<head>
  <title>PromptVCR</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= yield :head %>

  <script src="https://cdn.tailwindcss.com?plugins=typography"></script>
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {}
      },
      plugins: [
        // Typography plugin is loaded via CDN URL parameter
      ]
    }
  </script>
  <style>
    /* Typography base styles (light mode defaults) */
    .prose pre { @apply bg-gray-50 text-gray-800 rounded; }
    .prose code { @apply text-gray-800 bg-gray-100 px-1 rounded text-sm; }
    .prose h1, .prose h2, .prose h3, .prose h4 { @apply text-gray-800; }
    .prose p, .prose ul, .prose ol { @apply text-gray-700; }
    .prose a { @apply text-slate-600; }
    .prose-sm pre { @apply text-sm whitespace-pre-wrap; }

    /* Light mode specific styles */
    html:not(.dark) .prompt-container { @apply bg-gray-50 border-gray-200; }
    html:not(.dark) .response-container { @apply bg-white border-gray-200; }
    html:not(.dark) pre { @apply bg-gray-50 text-gray-800; }
    html:not(.dark) code { @apply bg-gray-100 text-gray-800; }

    /* Dark mode styles - applied only when .dark class is present */
    html.dark .prose pre { @apply bg-gray-800 text-gray-300; }
    html.dark .prose code { @apply text-gray-300 bg-gray-800; }
    html.dark .prose h1,
    html.dark .prose h2,
    html.dark .prose h3,
    html.dark .prose h4 { @apply text-gray-200; }
    html.dark .prose p,
    html.dark .prose ul,
    html.dark .prose ol { @apply text-gray-300; }
    html.dark .prose a { @apply text-slate-400; }

    /* Dark mode background colors */
    html.dark .bg-white { @apply bg-gray-800; }
    html.dark .bg-gray-50 { @apply bg-gray-700; }
    html.dark .bg-gray-100 { @apply bg-gray-800; }

    /* Dark mode form elements - more comprehensive targeting */
    html.dark input,
    html.dark textarea,
    html.dark select { @apply bg-gray-700 text-gray-200 border-gray-600; }

    /* Specifically target all input fields regardless of class */
    html.dark [type="text"],
    html.dark [type="email"],
    html.dark [type="password"],
    html.dark [type="number"],
    html.dark [type="url"] { @apply bg-gray-700 text-gray-200 border-gray-600; }

    /* Schema specific elements - broader targeting */
    html.dark .Properties div,
    html.dark div[class*="bg-white"],
    html.dark div[class*="border-gray-200"],
    html.dark .bg-white { @apply bg-gray-800 border-gray-700; }

    html.dark .bg-gray-100,
    html.dark .bg-gray-50,
    html.dark [class*="bg-gray-100"] { @apply bg-gray-700 text-gray-300; }

    /* Dark mode text colors */
    html.dark .text-gray-800 { @apply text-gray-200; }
    html.dark .text-gray-700 { @apply text-gray-300; }
    html.dark .text-gray-600 { @apply text-gray-400; }
    html.dark .text-gray-500 { @apply text-gray-400; }

    /* Dark mode border colors */
    html.dark .border-gray-200 { @apply border-gray-700; }

    /* Dark mode JSON highlighting */
    html.dark .json-key { @apply text-slate-400; }
    html.dark .json-value { @apply text-green-400; }
    html.dark .json-string { @apply text-yellow-400; }
    html.dark .json-number { @apply text-blue-400; }
    html.dark .json-boolean { @apply text-pink-400; }

    /* Dark mode link colors */
    html.dark .text-slate-600 { @apply text-slate-400; }
    html.dark .hover\:text-slate-900:hover { @apply text-slate-300; }
    html.dark .hover\:text-slate-800:hover { @apply text-slate-300; }

    /* Dark mode containers */
    html.dark .prompt-container { @apply bg-gray-700 border-gray-600; }
    html.dark .response-container { @apply bg-gray-800 border-gray-700; }

    /* Property panels in dark mode */
    html.dark div[class*="rounded border border-gray"] { @apply bg-gray-800 border-gray-700; }

    /* Dark mode buttons */
    html.dark button { @apply text-gray-300; }
    html.dark button:hover { @apply bg-gray-700; }

    /* Dark mode table hover states */
    html.dark tr:hover { @apply bg-gray-700; }
  </style>
  <%= stylesheet_link_tag "prompt_vcr/application", media: "all" %>

  <script>
    // Check for saved theme preference or use default dark mode
    if (localStorage.theme === 'light') {
      document.documentElement.classList.remove('dark');
    }
  </script>
</head>
<body class="bg-gray-100 dark:bg-gray-900 dark:text-gray-100 min-h-screen transition-colors duration-200">
  <div class="container mx-auto px-4 py-8">
    <header class="mb-8">
      <div class="flex items-center justify-between">
        <h1 class="text-3xl font-bold text-slate-600 dark:text-slate-400">
          <%= link_to "PromptVCR", prompt_vcr.cassettes_path(type: 'prompts'), class: "hover:text-slate-800 dark:hover:text-slate-300 transition duration-150" %>
        </h1>

        <!-- Dark mode toggle -->
        <button id="theme-toggle" type="button" class="text-gray-500 dark:text-gray-400 hover:bg-gray-200 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2">
          <!-- Sun icon (shown in dark mode) -->
          <svg id="theme-toggle-light-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" fill-rule="evenodd" clip-rule="evenodd"></path>
          </svg>
          <!-- Moon icon (shown in light mode) -->
          <svg id="theme-toggle-dark-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
          </svg>
        </button>
      </div>
    </header>

    <main>
      <%= yield %>
    </main>

  </div>

  <!-- Theme toggle script -->
  <script>
    // Function to toggle theme
    function toggleTheme() {
      const themeToggleDarkIcon = document.getElementById('theme-toggle-dark-icon');
      const themeToggleLightIcon = document.getElementById('theme-toggle-light-icon');

      // Toggle icons inside button based on theme
      if (document.documentElement.classList.contains('dark')) {
        themeToggleLightIcon.classList.remove('hidden');
        themeToggleDarkIcon.classList.add('hidden');
      } else {
        themeToggleLightIcon.classList.add('hidden');
        themeToggleDarkIcon.classList.remove('hidden');
      }
    }

    // Set initial icon state
    toggleTheme();

    // Add event listener to toggle button
    document.getElementById('theme-toggle').addEventListener('click', function() {
      // Toggle dark class on html element
      document.documentElement.classList.toggle('dark');

      // Update localStorage
      if (document.documentElement.classList.contains('dark')) {
        localStorage.theme = 'dark';
      } else {
        localStorage.theme = 'light';
      }

      // Update icons
      toggleTheme();
    });
  </script>
</body>
</html>
